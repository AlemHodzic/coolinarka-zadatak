generator client {
  provider = "prisma-client-js"
}

// Database configuration:
// - LOCAL: Uses SQLite (file:./dev.db) - zero config!
// - VERCEL: Uses PostgreSQL (POSTGRES_PRISMA_URL) - auto-configured
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Recipe {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  lead        String
  imageId     String
  prepTime    Int
  servings    Int
  difficulty  String
  mealGroup   String
  prepMethod  String
  tags        String
  ingredients String
  steps       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
