generator client {
  provider = "prisma-client-js"
}

// For production (Vercel), use PostgreSQL
// For local development, you can temporarily switch to "sqlite" with url = "file:./dev.db"
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Recipe {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  lead        String
  imageId     String
  prepTime    Int
  servings    Int
  difficulty  String
  mealGroup   String
  prepMethod  String
  tags        String
  ingredients String
  steps       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
