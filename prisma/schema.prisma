generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Recipe {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  lead        String
  imageId     String
  prepTime    Int
  servings    Int
  difficulty  String
  mealGroup   String
  prepMethod  String
  tags        String
  ingredients String
  steps       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
