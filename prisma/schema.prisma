generator client {
  provider = "prisma-client-js"
}

// PostgreSQL for Vercel deployment
// For local SQLite development, run: npm run setup:local
datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL")
}

model Recipe {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  lead        String
  imageId     String
  prepTime    Int
  servings    Int
  difficulty  String
  mealGroup   String
  prepMethod  String
  tags        String
  ingredients String
  steps       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Indexes for common queries
  @@index([difficulty])
  @@index([mealGroup])
  @@index([createdAt(sort: Desc)])
}
